{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es6",
      "ES2018",
      "ES2018.AsyncIterable"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}